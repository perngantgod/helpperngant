<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popbg" >
    <TextView
        android:id="@+id/tempmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/marktemperature"
        android:textColor="@color/blued"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="bold" />

    <LinearLayout 
        
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:id="@+id/tempmarklayout"
        >
        <LinearLayout
        android:id="@+id/tempint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/add_int"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/plus_bg"/>

        <EditText
            android:id="@+id/values_int"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:ems="2"
            android:text="36" >

        </EditText>
        
         <ImageButton
            android:id="@+id/delete_int"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sub_bg"/>
         
    </LinearLayout>
        
        <LinearLayout
        android:id="@+id/tempxiaoshu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/add_xiaoshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/plus_bg"/>

        <EditText
            android:id="@+id/values_xiaoshu"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:ems="2"
            android:text="50" />
        
         <ImageButton
            android:id="@+id/delete_xiaoshu"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/sub_bg"/>
         
    </LinearLayout>
    
    </LinearLayout>
    
    <Button
        android:id="@+id/button_temp"
        android:layout_marginBottom="5dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:background="@drawable/button_bg"
        android:text="确定" />

</RelativeLayout>