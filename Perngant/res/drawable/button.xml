<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true" android:state_enabled="true" android:state_pressed="false" android:drawable="@drawable/buttonstyle" />  
    
    <!-- 获得焦点并按下 -->
    <item android:drawable="@drawable/buttonpress" android:state_enabled="true" android:state_pressed="true"  
        />
    <!-- 失去焦点时 -->
    <item android:drawable="@drawable/buttonfocus" android:state_enabled="true" android:state_checked="true" android:state_focused="true"
        />
    <!-- 默认时 -->
    <item android:drawable="@drawable/buttonstyle"/>

</selector>