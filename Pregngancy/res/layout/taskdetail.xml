<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/left_margin_adviceheader"
        android:background="@color/lightblue" >

        <ImageView
            android:id="@+id/taskdetailback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/left_margin"
            android:src="@drawable/down4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/detailtask"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/task_details_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/adviceheight"
        android:background="@drawable/settings" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/left_margin_adviceheader"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/timeclock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:30"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Run about 20 mins"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button_task"
        android:layout_width="match_parent"
        android:layout_height="@dimen/left_margin_adviceheader"
        android:background="@color/lightgrey"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/finish_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/top_margin_advice"
            android:background="@drawable/suggest"
            android:text="@string/finish_text" >
        </Button>

        <Button
            android:id="@+id/dele_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/top_margin_advice"
            android:background="@drawable/suggest"
            android:text="@string/dele_text" >
        </Button>
    </RelativeLayout>

    <com.jun.pregnancy.views.SmoothScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/taskdetail_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4:00 AM" >
            </TextView>

            <TextView
                android:id="@+id/taskdetail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Run for 20 mins" >
            </TextView>
        </LinearLayout>
    </com.jun.pregnancy.views.SmoothScrollView>

</LinearLayout>